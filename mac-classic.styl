@font-face
  font-family Virtue
  font-style normal
  src url(virtue.ttf)


vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  {prop} args

user-select()
  vendor('user-select', arguments)

nomarginpadding()
  {prop} 0 for prop in margin padding

whiteonblack()
  color white
  background black

blackonwhite()
  color black 
  background white 

@keyframes blinky
  0%
    blackonwhite()
  100%
    whiteonblack()


.clickyblinky
  -webkit-animation-name: blinky;
  -webkit-animation-iteration-count: 3;
  -webkit-animation-timing-function: cubic-bezier(1.0,0,0,1.0);
  -webkit-animation-duration:0.1s;


$border = 1px solid black
$systemfont = 12px 'Virtue', 'Charcoal', 'Chicago', sans
$textfont = 12px 'Geneva', 'Verdana', sans

input[type="file"]
  display none

bordershadow()
  border $border
  border-{side}-width 2px for side in bottom right



*
  cursor default 

::selection
  whiteonblack()

::-moz-selection
  whiteonblack()


html, body, #wrapper
  nomarginpadding()
  height 100%
  user-select none

body
  font $systemfont 
  whiteonblack()

a
  color black
  font $systemfont

#wrapper
  border-radius 5px
  blackonwhite()
  background #808080

#menubar
  blackonwhite()
  border-top-left-radius 5px
  border-top-right-radius 5px
  height 20px
  line-height 20px
  vertical-align middle
  border-bottom $border
  padding-left 15px

.window
  display none
  blackonwhite()
  bordershadow()
  position absolute
  font $textfont
  overflow auto

.window article
  cursor auto 
  margin 10px
  overflow auto

.window header
  display block
  border-bottom $border 
  text-align center
  height 18px
  line-height 17px
  vertical-align middle
  overflow hidden
  .close
    border $border
    width 10px
    height 10px
    position absolute
    left 10px
    top 3px

  h1
    blackonwhite()
    display inline
    margin 0
    padding 0 5px 0 5px
    font $systemfont
.window.active header
    background url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAIAAAARCAQAAABd/bWaAAAAAXNSR0IArs4c6QAAAAJiS0dEAP+Hj8y/AAAACXBIWXMAAAsSAAALEgHS3X78AAAAB3RJTUUH2wYRChUI5zFo5gAAABl0RVh0Q29tbWVudABDcmVhdGVkIHdpdGggR0lNUFeBDhcAAAAdSURBVAjXY/z/n4GBiYEBSjAy/GdgYPlPFgthCgCXVw4awgk+lAAAAABJRU5ErkJggg==")
    margin-{side} 1px for side in left right

.window.headless
  border: $border
  font $systemfont
  text-align center
  article 
    padding 10px 25px 10px 25px
    margin 2px
    border 2px solid black


button
  blackonwhite()
  border: $border
  border-radius: 5px
  font $systemfont
  height 20px
  line-height 17px
  vertical-align middle
  &:active
    whiteonblack()
  &[disabled]
    color: #808080
    &:active
      blackonwhite()
      color:#808080

#menubar
  nomarginpadding()
  > li
    &:first-of-type
      margin-left 10px
    display inline
    padding 2px 10px 4px 10px
    position relative
    ul.menu
      display none
    &:hover
      whiteonblack()
      ul.menu
        position absolute
        left 0px
        top 20px
        display block

.menu
  display block
  nomarginpadding()
  blackonwhite()
  list-style none
  bordershadow()
  position absolute
  min-width 140px
  li
    padding 2px 15px 2px 15px
    &:hover
      whiteonblack()
      a
        whiteonblack()
    a
      text-decoration none
      display block
      width 100%
      height 100%
      nomarginpadding()

#progress
  text-align left
.progressbar
  margin-top 4px
  float left
  width 150px
  height 10px
  border $border
  .progresslevel
    background: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAQAAAAECAYAAACp8Z5+AAAAFUlEQVQImWNggID/SBiFgyLAgFUFALChDfPpdp57AAAAAElFTkSuQmCC")
    width 0%
    height 100%
#cancel
  margin-left 15px

#main
  display block
  left 10px
  top 30px

#helpwindow
  left 300px
  top 50px
  width 320px

#aboutwindow
  left 120px
  top 120px

#imagewell
  border-radius: 5px
  display block
  &.empty
    border 1px dotted black
    height 384px
    width 512px
    &:after
      height 256px
      width 256px
      text-align center
      font $systemfont
      content: 'drop image file here'
  &.hover
    height 384px
    width 512px
    border: 2px dashed black 
