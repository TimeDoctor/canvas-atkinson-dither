    background url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAIAAAARCAQAAABd/bWaAAAAAXNSR0IArs4c6QAAAAJiS0dEAP+Hj8y/AAAACXBIWXMAAAsSAAALEgHS3X78AAAAB3RJTUUH2wYRChUI5zFo5gAAABl0RVh0Q29tbWVudABDcmVhdGVkIHdpdGggR0lNUFeBDhcAAAAdSURBVAjXY/z/n4GBiYEBSjAy/GdgYPlPFgthCgCXVw4awgk+lAAAAABJRU5ErkJggg==")
    margin-{side} 1px for side in left right

.window.headless
  font $systemfont
  text-align center
  article 
    padding 10px 25px 10px 25px
    margin 2px
    border 2px solid black


button
  blackonwhite()
  border: $border
  border-radius: 5px
  font $systemfont
  height 20px
  line-height 20px
  vertical-align middle
  &:active
    whiteonblack()

#menubar
  nomarginpadding()
  > li
    &:first-of-type
      margin-left 10px
    display inline
    padding 2px 10px 2px 10px
    position relative
    ul.menu
      display none
    &:hover
      whiteonblack()
      ul.menu
        display block

.menu
  display block
  nomarginpadding()
  blackonwhite()
  list-style none
  bordershadow()
  position absolute
  min-width 120px
  li
    padding 2px 15px 2px 15px
    &:hover
      whiteonblack()
      a
        whiteonblack()
    a
      text-decoration none
      display block
      width 100%
      height 100%
      nomarginpadding()


#main
  display block
  left 100px
  top 100px

#helpwindow
  left 300px
  top 50px
  width 320px

#aboutwindow
  left 120px
  top 120px
