vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  {prop} args

user-select()
  vendor('user-select', arguments)

nomarginpadding()
  {prop} 0 for prop in margin padding

whiteonblack()
  color white
  background black

blackonwhite()
  color black 
  background white 

@keyframes blinky
  0%
    blackonwhite()
  100%
    whiteonblack()


.clickyblinky
  -webkit-animation-name: blinky;
  -webkit-animation-iteration-count: 3;
  -webkit-animation-timing-function: cubic-bezier(1.0,0,0,1.0);
  -webkit-animation-duration:0.1s;


$border = 1px solid black
$systemfont = 12px 'Charcoal', 'Chicago', sans
$textfont = 12px 'Geneva', 'Verdana', sans

bordershadow()
  border $border
  border-{side}-width 2px for side in bottom right



*
  cursor default 




html, body, #wrapper
  nomarginpadding()
  height 100%
  user-select none

body
  font $systemfont 
  whiteonblack()

a
  color black
  font $systemfont

#wrapper
  border-radius 5px
  blackonwhite()
  background #808080

#menubar
  blackonwhite()
  border-top-left-radius 5px
  border-top-right-radius 5px
  height 20px
  line-height 20px
  vertical-align middle
  border-bottom $border
  padding-left 15px

.window
  display none
  blackonwhite()
  border $border
  position absolute
  font $textfont

.window article
  margin 10px

.window header
  display block
  border-bottom $border 
  text-align center
  height 18px
  line-height 18px
  vertical-align middle
  overflow hidden
  .close
    border $border
    width 10px
    height 10px
    position absolute
    left 10px
    top 3px

  h1
    blackonwhite()
    display inline
    margin 0
    padding 0 5px 0 5px
    font $systemfont
